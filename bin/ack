#!/bin/bash
export HAM_NO_VER_CHECK=1
if [[ -z "$HAM_HOME" ]]; then echo "E/HAM_HOME not set !"; exit 1; fi

. "$HAM_HOME/bin/ham-toolset" perl > /dev/null
args=()
for PARAM in "$@"
do
    if [ ${PARAM:0:1} = "-" ]; then
        args+=(${PARAM})
    else
        args+=("${PARAM}")
    fi
done
perl "$HAM_HOME/bin/ack.pl" "${args[@]}"

#----------------------------------------------------------------------
#     LOA
#----------------------------------------------------------------------
LOA_OS = adr ;
LOA_LINKER = gcc ;
BUILD_BIN_LOA = nt-x86 ;
BUILD_SUFEXE = .exe ;

#----------------------------------------------------------------------
#     DEFINES
#----------------------------------------------------------------------
DEFINES += niPosix ANDROID ;
# Android NDK C++ support is more than spotty... so no BOOST...
DEFINES += _NO_BOOST ;

#----------------------------------------------------------------------
#     OS Variables
#----------------------------------------------------------------------
POSIX = 1 ;
ANDROID = 1 ;
EMBEDDED = 1 ;
NO_PCH = 1 ;
NO_EXCEPTION = 1 ;

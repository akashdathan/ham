#----------------------------------------------------------------------
#     LOA
#----------------------------------------------------------------------
LOA_ARCH = avm2 ;
LOA_OS = swf ;
LOA_LINKER = gcc ;
BUILD_BIN_LOA = nt-x86 ;
BUILD_SUFEXE = .exe ;
DEFINES += _COMPILER_FLASCC ;

#----------------------------------------------------------------------
#     DEFINES
#----------------------------------------------------------------------
DEFINES += niPosix ;
# ... yup thanks GCC 4.2 ... using boost there is as fun as nailing your hand to a door ...
DEFINES += _NO_BOOST ;

#----------------------------------------------------------------------
#     OS Variables
#----------------------------------------------------------------------
POSIX = 1 ;
EMBEDDED = 1 ;
NO_DLL = 1 ;
NO_PCH = 1 ;
NO_EXCEPTION = 1 ;
BUILD_JNI = 0 ;

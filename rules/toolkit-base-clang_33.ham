#----------------------------------------------------------------------
#     LOA
#----------------------------------------------------------------------
LOA_OS = $(HAM_OS:L) ;
LOA_LINKER = gcc ;
LOA_ARCH = $(OSPLAT:L) ;

#----------------------------------------------------------------------
#     DEFINES
#----------------------------------------------------------------------
DEFINES += $(HAM_OS) _COMPILER_$(LOA_OS:U)_$(LOA_ARCH:U) ;

#----------------------------------------------------------------------
#     OS Variables
#----------------------------------------------------------------------
POSIX = 1 ;
if $(OS) = MACOSX {
  OSX = 1 ;
}

#----------------------------------------------------------------------
#     TARGET FEATURES
#----------------------------------------------------------------------
if $(OS) = MACOSX {
  TARGET_FEATURE_EXE = 1 ;
  TARGET_FEATURE_DLL = 1 ;
  TARGET_FEATURE_CONSOLE = 1 ;
}

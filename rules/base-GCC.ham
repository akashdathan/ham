GCC_EXE_BASE ?= "" ;
if ! $(OSPLAT) {
  EXIT "E/{OSPLAT} not defined." ;
}

SLASH   ?= / ;
SUFEXE  ?= .$(OSPLAT:L) ;
SUFOBJ  ?= .o ;
SUFLIB  ?= .a ;
PREFIXDLL ?= lib ;
CHMOD   ?= chmod ;

if $(OS) = MACOSX {
  SUFEXE = "" ;
  SUFDLL = .dylib ;
}
else {
  SUFDLL ?= .so ;
}

C++FLAGS    ?= ;
CCFLAGS     ?= ;

CC ?= $(GCC_EXE_BASE)gcc ;
C++  ?= $(CC) ;
LINK ?= $(CC) ;
AR   ?= $(GCC_EXE_BASE)ar -ru ;

LINKFLAGS   ?= "" ;
LINKLIBS    ?=  ;
OPTIM       ?= "" ;
STDHDRS     ?= ;
UNDEFFLAG   ?= "-u _" ;

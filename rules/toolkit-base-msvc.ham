#----------------------------------------------------------------------
#     LOA
#----------------------------------------------------------------------
LOA_OS = nt ;
LOA_LINKER = msvc ;

#----------------------------------------------------------------------
#     DEFINES
#----------------------------------------------------------------------
DEFINES += NOMINMAX WIN32 _WINDOWS __WIN32__ ;
# The secure CRT (_s methods) are MSVC specific so we can't use them
# since they are not portable.
DEFINES += _CRT_SECURE_NO_WARNINGS ;

#----------------------------------------------------------------------
#     OS Variables
#----------------------------------------------------------------------
WINDOWS = 1 ;

#----------------------------------------------------------------------
#     TARGET FEATURES
#----------------------------------------------------------------------
TARGET_FEATURE_DLL = 1 ;
TARGET_FEATURE_CONSOLE = 1 ;
TARGET_FEATURE_NIAPPLIB = 1 ;
if $(BUILD_JNI) = 1 {
  TARGET_FEATURE_JNI = 1 ;
}
